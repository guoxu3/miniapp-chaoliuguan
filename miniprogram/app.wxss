}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.van-tabbar-item__icon{
  opacity: .6;
}
.van-tabbar-item--active .van-tabbar-item__icon{
  opacity: 1;
}

.van-tabbar-item--active .van-tabbar-item__text{
  font-weight: bold;
  color: #333;
}